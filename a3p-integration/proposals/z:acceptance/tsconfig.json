{
  "compilerOptions": {
    "noEmit": true,
    "target": "esnext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    // XXX synthetic-chain has some errors
    "skipLibCheck": true
  }
}
