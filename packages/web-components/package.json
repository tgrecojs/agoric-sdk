{
  "name": "@agoric/web-components",
  "description": "Webcomponents for Agoric dapps",
  "license": "MIT",
  "author": "Agoric",
  "version": "0.6.0",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "build": "exit 0",
    "test": "node -e 'process.exit(process.env.SKIP_BROWSER_TESTS==\"true\" ? 0 : 1)' || web-test-runner --coverage",
    "test:c8": "exit 0",
    "test:xs": "exit 0",
    "test:watch": "web-test-runner --watch",
    "lint-fix": "yarn lint:eslint --fix",
    "lint": "run-s --continue-on-error lint:*",
    "lint:types": "tsc -p jsconfig.json",
    "lint:eslint": "eslint . --ignore-path .gitignore",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server --port 8100"
  },
  "dependencies": {
    "@agoric/assert": "^0.6.0",
    "@agoric/cache": "^0.3.0",
    "@agoric/casting": "^0.4.0",
    "@agoric/ertp": "^0.16.0",
    "@agoric/notifier": "^0.6.0",
    "@agoric/smart-wallet": "^0.5.0",
    "@agoric/wallet": "^0.18.0",
    "@endo/captp": "^3.1.1",
    "@endo/eventual-send": "^0.17.2",
    "@endo/marshal": "^0.8.5",
    "@endo/promise-kit": "^0.2.56",
    "@lit-labs/react": "^1.0.1",
    "lit": "2.7.4",
    "robot3": "^0.2.19",
    "rollup-plugin-polyfill-node": "^0.9.0"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@endo/init": "^0.5.56",
    "@keplr-wallet/types": "^0.11.37",
    "@open-wc/eslint-config": "^10.0.0",
    "@open-wc/testing": "^3.1.7",
    "@web/dev-server": "^0.1.22",
    "@web/test-runner": "^0.13.23",
    "eslint": "^8.36.0",
    "eslint-plugin-lit": "^1.8.2",
    "eslint-plugin-lit-a11y": "^2.4.0",
    "eslint-plugin-wc": "^1.4.0",
    "mock-socket": "^9.0.4",
    "sinon": "^15.0.1"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "@agoric"
    ],
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "prettier/prettier": "off"
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./jsconfig.json"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
